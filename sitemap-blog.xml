---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xhtml="http://www.w3.org/1999/xhtml">
{% assign sortedPostsEn = site.posts | where: 'published', true | where: 'language', 'en' | sort: 'path', 'last' | reverse %}
{% assign sortedPostsDe = site.posts | where: 'published', true | where: 'language', 'de' | sort: 'path', 'last' | reverse %}
{% for postEn in sortedPostsEn %}
  {% assign postDe = sortedPostsDe[forloop.index0] %}<!-- {{ postEn.title | xml_escape }} -->
  <url>
    <loc>{{ site.url }}{{ postEn.url }}</loc>
    <priority>0.5</priority>
    <xhtml:link rel="alternate" hreflang="de" href="{{ site.url }}{{ postDe.url }}" />
    <xhtml:link rel="alternate" hreflang="en" href="{{ site.url }}{{ postEn.url }}" />
  </url>
  <url>
    <loc>{{ site.url }}{{ postDe.url }}</loc>
    <priority>0.5</priority>
    <xhtml:link rel="alternate" hreflang="en" href="{{ site.url }}{{ postEn.url }}" />
    <xhtml:link rel="alternate" hreflang="de" href="{{ site.url }}{{ postDe.url }}" />
  </url>
{% endfor %}
</urlset>
